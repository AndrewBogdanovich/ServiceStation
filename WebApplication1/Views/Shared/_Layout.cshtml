<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>

    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
   
    <script>
        jQuery(document).ready(function ($) {
            $(".dropdown-button").dropdown();
        });
    </script>


</head>

<body>
    <script>        //Password   //   .0Admin   </script>

   
    <div class="navbar-fixed">

        <ul id="dropdown1" class="dropdown-content">
            <li>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Order", "Create", "Cars")
                }
            </li>            
            <li class="divider"></li>
           
            <li class="divider"></li>
            <li>
                @Html.ActionLink("Car washes","Index","Washes")
            </li>
           
        </ul>

        <nav style="background:rgba(97,97,97,0.5)">

            <div class="nav-wrapper brown">

           

                <a href="~/Home/Index" class="brand-logo"><h4>Service Station</h4></a>
               

                <ul id="nav-mobile" class="right hide-on-med-and-down ">

                    <li><a class="dropdown-button"  data-activates="dropdown1">Services<i class="material-icons right">arrow_drop_down</i></a></li>  
                    <li>
                        @Html.ActionLink("Details", "Index", "Details")
                    </li>
                    <li>
                        @Html.ActionLink("About us","About","Home")
                    </li>
                    <li>
                        @Html.ActionLink("Contacts", "Contact", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Repairs","IndexRepairs","Home")
                    </li>
                
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>@Html.ActionLink("Hello! " + User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                        <li>
                            @Html.ActionLink("Log out", "Logoff", "Account", new { area = "" }, new { @class = "active" })
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "active" })
                        </li>
                        <li>
                            @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "active" })
                        </li>
                    }

                </ul>


            </div>

        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
